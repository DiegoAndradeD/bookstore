<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/bookPage.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="shortcut icon" href="/images/BookOpen.svg" type="image/x-icon">
    <title>Book Page</title>
    <style>
        .highligthChild {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    
        .highligthChild img {
            width: 479;
            height: 316px;
            object-fit: cover; /* Maintain aspect ratio and cover the entire container */

        }
    </style>
</head>
<body>
    <header>
        <%-
        include(navbar)
        %>
    </header>

    <div class="popup" id="myPopup">
        <p id="popupParagraph"></p>
        <button id="closePopup">Close</button>
    </div>

    <main>
        <div class="mainContainer">
            <div class="imageContainer">
                <img src="/images/bookCovers/<%=bookDetail.cover %>" alt="">
                 </div>
                 <div class="bookInfoContainer">
                    <div id="titleContainer" class="bookInfoChild">
                    <p><%= bookDetail.title %></p>
                    <a href="" class="favLinks">
                        <p class="favImg"><img src="/images/favorite.svg" alt="Favorite Icon"></p>
                    </a>
                    </div>
                    <div id="authorContainer" class="bookInfoChild">
                    <p>Author: <%= bookDetail.author %></p>
                    <p></p>
                    </div>
                    <div id="synopsisContainer" class="bookInfoChild">
                    <p><%= bookDetail.synopsis %></p>
                </div>
                <div id="priceStockContainer" class="bookInfoChild">
                    <p>$<%= bookDetail.price %>.00</p>
                    <div class="bookInfoChild4_SubItems">
                        <button class="stockBtn">-</button>
                        <p id="stockNumber">1</p>
                        <button class="stockBtn">+</button>
                    </div>
                    </div>
                    <div class="bookInfoChild">
                    <a href="#" id="cartBtn"><img src="/images/SHOPPING_CART _Black.svg" alt="Shopping Cart"></a>
                    
                    <section id="buyNowBtn">
                        <samp style="font-size: 23px; cursor: pointer;" onclick="openNav()"> Buy Now </samp>
                    </section>           
                </div>
            </div>
            <aside id="menuOculto" class="menuOculto">
                <a href="#" class="btnclose" onclick="closeNav()">&times;</a>
                <a href="#"> <button>dsd</button></a>
                <a href="#">teste</a>
                <a href="#">teste</a>
            </aside>
        </div>

        <div class="secondContainer">
            <p style="text-align: center;" class="categoryText"><strong>View More</strong></p>
            <div id="highligth" class="highligth">
                <% for (let i = 0; i < trendingBooks.length; i++) { %>
                    <div class="highligthChild" id="item<%= i + 1 %>">
                        <a href="/bookPageRedirect?id=<%= trendingBooks[i]._id %>"><img src="/images/bookCovers/<%= trendingBooks[i].cover %>" alt=""></a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        All Rights Reserved: by Diego Deiro & Henrique Viana 
    </footer>
    <script src="/javascripts/menBuy.js"></script>

</body>
</html>
